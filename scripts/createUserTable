IF (EXISTS (SELECT * 
	FROM INFORMATION_SCHEMA.TABLES 
	WHERE TABLE_SCHEMA = 'PUBLIC' 
	AND TABLE_NAME = 'USERS'))
BEGIN
	CREATE MEMORY TABLE PUBLIC.USERS(
	NICKNAME VARCHAR(32) NOT NULL PRIMARY KEY,
	DESCRIPTION VARCHAR(512) DEFAULT '',
	SPECIES VARCHAR(32) DEFAULT '',
	BLOCKED BOOLEAN DEFAULT FALSE NOT NULL,
	USENOTICE BOOLEAN DEFAULT FALSE NOT NULL,
	RESPONDWITHNICK BOOLEAN DEFAULT FALSE NOT NULL,
	DISPATCH BOOLEAN ARRAY[16])
END